<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.coupang.member.notification.model.MailRepository">
	<!-- Netpion - 메일 발송 -->
	<insert id="insert" useGeneratedKeys="true" keyProperty="seq" parameterType="com.coupang.member.notification.model.MailMessage">
		INSERT INTO	${tableName} (
			 seq
            ,membersrl
            ,name
            ,email
            ,fromname
            ,fromaddress
            ,subject
            ,content
            ,regdttm
            ,sendyn
		)	VALUES	(
			 ${sequenceNextValName} 
			,#{memberSrl}
			,#{mailTo}
			,#{mailToAddr}
			,#{mailFrom}
			,#{mailFromAddr}
			,#{subject}
			,#{content:CLOB}
			,TO_CHAR(SYSDATE, 'YYYYMMDDHH24MISS')
			,'N' 
		)
	</insert>
</mapper>